
<div class="col-md-4 mx-auto bg-secondary text-white">
    <div class="cards">
        <div class="card-header">
            <h3>Add Your New Note</h3>
        </div>

        <div class="card-body">
            <form action="/notes/newNote" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <hr>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Write your note!"></textarea>
                </div>
                <hr>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">SAVE MY NOTE</button>
                </div>


            </form>
        </div>
    </div>
</div>