<div class="form-outline">
  <input type="search" id="form1" class="form-control" placeholder=" ðŸ” Search your notes" aria-label="Search" />
</div>
<br>

<div class="row p-4">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card text-white bg-secondary mb-3">
      <div class="card-body">


        <!-- TITLE -->
        <h5 type="button" class="card-title justify-content-between mx-auto" data-toggle="tooltip" data-placement="top"
          title={{date}}>{{title}} </h5>



        <hr>
        <!-- DESCRIPTION -->
        <p>{{ description }} </p>
        <div class="btn btn-group column btn-sm mx-auto ">
          <!-- EDIT -->
          <a href="/notes/edit/{{_id}}">
            <button class="btn btn-primary btn-block btn-md"><i class="fas fa-edit"></i>
              </button>
          </a>
          <!-- DELETE REQUEST -->
          <form action="/notes/delete/{{_id}}?_method=delete" method="post">
            <input type="hidden" name="_method" value="delete">
            <button class="btn btn-danger btn-block btn-md" type="submit">
              <i class="fas fa-trash"></i></button>
          </form>

        </div>
      </div>
    </div>
  </div>

  {{else}}
  <div class="card mx-auto">
    <div class="card-header">
      Hello there {{user.name}}!
    </div>
    <div class="card-body">
      <h5 class="card-title">You dont have any notes yet...</h5>
      <p class="card-text">This app let's you keep track of all your notes and reminders. Let's begin!</p>
      <a href="/notes/add" class="text-center">
        <button class="btn btn-primary" type="button">

          <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
          Please add a new note...
        </button>
      </a>
    </div>
  </div>

  {{/each}}

</div>

<div class="text-center">
  <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">
    <i class="fas fa-add"></i>
    Add new note
  </button>
</div>

<!-- Trigger the modal with a button -->


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-center">Add a new note</h4>
      </div>
      <div class="modal-body">
        <div class="mx-auto">
          <div class="cards">
            <form action="/notes/newNote" method="post">
              <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
              </div>
              <hr>
              <div class="form-group">
                <textarea name="description" class="form-control" placeholder="Write your note!"></textarea>
              </div>
              <hr>
              <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg btn-block">SAVE MY NOTE</button>
              </div>


            </form>

          </div>
        </div>
      </div>






      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

